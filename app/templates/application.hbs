<div class="min-h-screen">
  <div class="flex flex-col w-full fixed left-0 inset-y-0">
    <div id="header" class="flex bg-blue-500 shadow px-4 py-2 text-white">
      <div class="w-2/3">
        <h1>Frolfr</h1>
      </div>
      <div class="w-1/3">
        <img
          class="block rounded-full h-10 ml-auto"
          src="https://casafranciscanaoutreach.org/wp-content/uploads/2016/09/generic_avatar.jpg"
          alt="avatar">
      </div>
    </div>
    <div id="content" class="flex-1 overflow-y-scroll">
      {{outlet}}
    </div>
    <div id="footer" class="flex justify-around text-center items-center border h-16 inset-x-0 bottom-0 bg-grey-light">
      <UiLink @args={{array "round" "1"}} as |link|>
        <div class="self-stretch pointer-events-auto" role="button" {{on "click" link.transitionTo}}>
          Rounds
        </div>
      </UiLink>

      <UiLink @args={{array "users"}} as |link|>
        <div class="self-stretch pointer-events-auto" role="button" {{on "click" link.transitionTo}}>
          Users
        </div>
      </UiLink>

      <UiLink @args={{array "user" "1"}} as |link|>
        <div class="self-stretch pointer-events-auto" role="button" {{on "click" link.transitionTo}}>
          Profile
        </div>
      </UiLink>

      <UiLink @args={{array "rounds.new"}} as |link|>
        <div class="self-stretch pointer-events-auto" role="button" {{on "click" link.transitionTo}}>
          {{!-- {{svg-jar "plus" class="stroke-current w-4 h-4 mr-1"}} --}}
          New
        </div>
      </UiLink>
    </div>
  </div>
</div>