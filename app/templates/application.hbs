<div class="min-h-screen">
  <div class="flex flex-col w-full fixed pin-l pin-y">
    <div id="header" class="flex bg-blue shadow px-4 py-2 text-white">
      <div class="w-2/3">
        <h1>Frolfr</h1>
      </div>
      <div class="w-1/3">
        <img
          class="block rounded-full h-10 ml-auto"
          src="https://casafranciscanaoutreach.org/wp-content/uploads/2016/09/generic_avatar.jpg"
          alt="">
      </div>
    </div>
    <div id="content" class="flex-1 overflow-y-scroll">
      {{outlet}}
    </div>
    <div id="footer" class="flex justify-around text-center items-center border h-16 pin-x pin-b bg-grey-light">
      {{#ui-link 'round' '1' as |link|}}
        <div class="self-stretch pointer-events-auto" onclick={{action link.transitionTo}}>
          Rounds
        </div>
      {{/ui-link}}

      {{#ui-link 'users' as |link|}}
        <div class="self-stretch pointer-events-auto" onclick={{action link.transitionTo}}>
          Users
        </div>
      {{/ui-link}}

      {{#ui-link 'user' '1' as |link|}}
        <div class="self-stretch pointer-events-auto" onclick={{action link.transitionTo}}>
          Profile
        </div>
      {{/ui-link}}

      {{#ui-link 'rounds.new' as |link|}}
        <div class="self-stretch pointer-events-auto" onclick={{action link.transitionTo}}>
          {{!-- {{svg-jar "plus" class="stroke-current w-4 h-4 mr-1"}} --}}
          New
        </div>
      {{/ui-link}}
    </div>
  </div>
</div>