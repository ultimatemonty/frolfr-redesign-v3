<div class="min-h-screen antialiased text-gray-900">
  <div class="flex flex-col w-full fixed left-0 inset-y-0">
    <header class="bg-gray-900 flex items-center justify-between px-4 py-3">
      <div>
        <span class="text-4xl">
          <span class="text-white p-0 m-0">Fr</span><span class="text-blue-500 p-0 m-0 inline-block transform rotate-45">‚ê•</span><span class="text-blue-500 p-0 m-0">o</span><span class="text-white p-0 m-0">lfr</span>
          </span>
      </div>
      <div>
        {{!-- <button type="button" class="block text-gray-500 hover:text-white focus:text-white focus:outline-none">
          {{svg-jar "hamburger-menu" class="h-6 w-6 fill-current" viewBox="0 0 24 24"}}
        </button> --}}
        {{#if this.session.isAuthenticated}}
          <span class="text-white">{{this.currentUser.user.firstName}}</span>
          <button class="block text-gray-500 hover:text-white focus:text-white focus:outline-none" type="button" {{on "click" this.logout}}>Logout</button>
        {{else}}
          <LinkTo @route='signin' class="text-white">Login</LinkTo>
        {{/if}}
      </div>
    </header>
    <div id="content" class="flex-1 overflow-y-scroll">
      {{outlet}}
    </div>
    <section id="bottom-nav" class="block fixed inset-x-0 bottom-0 z-10 bg-blue-500 shadow">
      <div id="nav-items" class="flex justify-between">
        <UiLink @args={{array "app.home"}} as |link|>
          <button type="button" class="w-full focus:text-teal-500 hover:text-teal-500 justify-center inline-block text-center pt-2 pb-1  text-gray-200" role="button" {{on "click" link.transitionTo}}>
            {{svg-jar "home" width="25" height="25" class="inline-block mb-1"}}
            <span class="tab tab-home block text-xs">Home</span>
          </button>
        </UiLink>

        <UiLink @args={{array "app.users"}} as |link|>
          <button type="button" class="w-full focus:text-teal-500 hover:text-teal-500 justify-center inline-block text-center pt-2 pb-1  text-gray-200" role="button" {{on "click" link.transitionTo}}>
            {{svg-jar "friends" width="25" height="25" class="inline-block mb-1"}}
            <span class="tab tab-home block text-xs">Friends</span>
          </button>
        </UiLink>

        <UiLink @args={{array "app.user"}} as |link|>
          <button type="button" class="w-full focus:text-teal-500 hover:text-teal-500 justify-center inline-block text-center pt-2 pb-1  text-gray-200" role="button" {{on "click" link.transitionTo}}>
            {{svg-jar "profile" width="25" height="25" class="inline-block mb-1"}}
            <span class="tab tab-home block text-xs">Profile</span>
          </button>
        </UiLink>

        <UiLink @args={{array "app.rounds.new"}} as |link|>
          <button type="button" class="w-full focus:text-teal-500 hover:text-teal-500 justify-center inline-block text-center pt-2 pb-1 text-gray-200" role="button" {{on "click" link.transitionTo}}>
            {{svg-jar "play" width="25" height="25" class="inline-block mb-1"}}
            <span class="tab tab-home block text-xs">Play</span>
          </button>
        </UiLink>
      </div>
    </section>
  </div>
</div>
