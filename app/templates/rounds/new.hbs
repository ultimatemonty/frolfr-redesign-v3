<div id="new-round" class="px-4 py-2 h-full" data-tether-id="select-course">
  <h2>Start a New Round</h2>
  <div class="flex flex-col h-full">
    <form class="w-full h-full max-w-sm">
      <div
        class="flex flex-row border-b border-b-2 border-grey py-2 text-grey-darker text-2xl mt-12">
        {{#if selectedCourse}}
          <div class="flex justify-between w-full text-blue border border-1-grey-light rounded px-4 py-2">
            <div>
              {{selectedCourse.name}}
            </div>
            <div class="pointer-events-auto" onclick={{action "clearSelectedCourse"}}>
              X
            </div>
          </div>
        {{else}}
          <div class="w-full" onclick={{action "toggleCourseSelect"}}>
            Where are you playing?
          </div>
        {{/if}}
      </div>
      <div
        class="flex w-full items-center border-b border-b-2 border-grey py-2 text-grey-darker text-2xl mt-12 pointer-events-auto"
        onclick={{action "togglePlayerSelect"}}>
        Who are you playing with?
      </div>
      <div>
        <ul class=" flex flex-col h-64 overflow-y-auto">
          {{#each selectedPlayers as |player|}}
            <li class="mt-4">
              <div class="flex flex-row">
                <div class="items-center">
                  <img class="rounded-full h-8" src={{player.avatarUrl}} alt={{player.username}}>
                </div>
                <div class="text-xl text-grey-darker px-4 items-center mt-1">
                  {{player.name}}
                </div>
                <div class="pointer-events-auto text-xl mt-1 mr-0 -ml-1" onclick={{action "removePlayer" player}}>
                  X
                </div>
              </div>
            </li>
          {{/each}}
        </ul>
      </div>
      <div class="inset-y-0 bottom-0 mt-8">
        <button class="bg-green text-2xl w-full text-white font-bold py-4 px-4 rounded" type="button" {{action "startRound"}}>
          Start Round
        </button>
      </div>
    </form>
  </div>

  {{#if showCourseSelect}}
    <div>
      {{!-- <ModalDialog @animatable={{false}} @onClose={{action "toggleCourseSelect"}} @clickOutsideToClose={{true}} @tetherTarget="#footer" @targetAttachment="bottom middle" @attachment="bottom middle" @overlayClass="bg-black opacity-75">
          <div class="flex">
            <div class="w-screen bg-white h-96">
              <div class="px-4 py-2">
                <div>
                  <div class="flex items-center border-b border-b-2 border-grey py-2">
                    <input
                      class="appearance-none bg-transparent border-none w-full text-grey-darker mr-3 py-1 px-2 leading-tight focus:outline-none"
                      type="text"
                      placeholder="Search Courses"
                      aria-label="Course search"
                      oninput={{action "searchCourses" value="target.value"}}>
                  </div>
                </div>
                <div>
                  <ul class=" flex flex-col h-96 overflow-y-scroll">
                    {{#each filteredCourses as |course|}}
                      <li class="mt-4 pointer-events-auto" onclick={{action "selectCourse" course}}>
                        <div class="flex flex-row">
                          <div class="w-2/3 font-bold text-xl mb-2">{{course.name}}</div>
                          <div class="w-1/3 text-right font-semibold mb-2">Par {{course.par}}</div>
                        </div>
                        <div class="flex flex-row">
                          <div class="w-2/3 text-grey-dark mb-2">
                            {{course.location}}
                          </div>
                        </div>
                      </li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </div>
          </div>
      </ModalDialog> --}}
    </div>
  {{/if}}

  {{#if showPlayerSelect}}
    <div>
      {{!-- <ModalDialog @animatable={{false}} @onClose={{action "togglePlayerSelect"}} @clickOutsideToClose={{true}} @tetherTarget="#footer" @targetAttachment="bottom middle" @attachment="bottom middle" @overlayClass="bg-black opacity-75">
        <div class="flex">
          <div class="w-screen bg-white h-96">
            <div class="px-4 py-2">
              <div>
                <div class="flex items-center border-b border-b-2 border-grey py-2">
                  <input
                    class="appearance-none bg-transparent border-none w-full text-grey-darker mr-3 py-1 px-2 leading-tight focus:outline-none"
                    type="text"
                    placeholder="Search Players"
                    aria-label="Player search"
                    oninput={{action "searchPlayers" value="target.value"}}>
                </div>
              </div>
              <div>
                <ul class=" flex flex-col h-96 overflow-y-scroll">
                  {{#each filteredPlayers as |player|}}
                    <li class="mt-4 pointer-events-auto" onclick={{action "addPlayer" player}}>
                      <div class="flex flex-row">
                        <div class="items-center">
                          <img class="rounded-full h-8" src={{player.avatarUrl}} alt={{player.username}}>
                        </div>
                        <div class="text-xl text-grey-darker px-4 items-center">
                          {{player.name}}
                        </div>
                      </div>
                    </li>
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
        </div>
