<div id="courses" class="px-4 py-2">
  <div class="position-fixed">
    <h2>Courses</h2>
  </div>

  <div class="overflow-y-scroll">
    {{#each model as |course|}}
      {{#ui-link "course" course.id as |link|}}
        <div class="rounded shadow border mt-4 pointer-events-auto" onclick={{action link.transitionTo}}>
          <div class="flex flex-col px-6 py-4">
            <div class="flex flex-row">
              <div class="w-2/3 font-bold text-xl mb-2">{{course.name}}</div>
              <div class="w-1/3 text-right font-semibold mb-2">Par {{course.par}}</div>
            </div>
            <div class="flex flex-row">
              <div class="w-2/3 text-grey-dark mb-2">
                {{course.city}}, {{course.province}} {{course.countryCode}}
              </div>
              <div class="w-1/3 text-right text-grey-dark font-semibold mb-2">
                5.6mi
              </div>
            </div>
          </div>
        </div>
      {{/ui-link}}
    {{/each}}
  </div>
</div>
